{% for host in groups['all'] %}
{% if hostvars[host].interfaces.eth0.ipv4 and
      hostvars[host].interfaces.eth0.mac is defined %}

hostname {{ host }} {
  address {{ hostvars[host].interfaces.eth0.ipv4 }}
  mac {{ hostvars[host].interfaces.eth0.mac }}
  name {{ host }}
}
{% endif %}
{% endfor %}