---

global:
  scrape_interval:     15s
  evaluation_interval: 15s

rule_files:

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets: ['localhost:9090']
  - job_name: arche
    static_configs:
      - targets: ['arche:9100']
  - job_name: archenew
    static_configs:
      - targets: ['archenew:9100']
  - job_name: hetzner01
    static_configs:
      - targets: ['hetzner01.uwearzt.de:9100']
  - job_name: hetzner01-apache
    static_configs:
      - targets: ['hetzner01.uwearzt.de:9117']
  - job_name: leda
    static_configs:
      - targets: ['leda:9100']
  - job_name: isonoe
    static_configs:
      - targets: ['isonoe:9100']
